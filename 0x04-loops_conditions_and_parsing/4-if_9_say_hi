#!/usr/bin/env bash
# Displays "Best School" 10 times using a while loop
# Says "Hi" on the 9th iteration

# Initialize a counter
count=1

while [ $count -le 10 ]; do
    # Check if it's the 9th iteration
    if [ $count -eq 9 ]; then
        echo "Best School"
    fi

    # Display "Best School" for all iterations
    echo "Best School"

    # Increment the counter
    ((count++))
done

# Display "Hi" on the 10th line
echo "Hi"
