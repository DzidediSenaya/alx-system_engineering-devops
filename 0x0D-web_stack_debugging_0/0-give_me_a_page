#!/usr/bin/env bash
# This script fixes Apache to serve a "Hello Holberton" page in a Docker container

# Update the package list inside the container
apt-get update

# Install Apache web server
apt-get install -y apache2

# Start Apache service
service apache2 start

# Create an HTML file with "Hello Holberton" content
echo "Hello Holberton" > /var/www/html/index.html

# Make sure the Apache service is running
while true; do
  sleep 2
  if service apache2 status | grep -q "Apache2 is running"; then
    break
  fi
done

# Keep the script running in the foreground to keep the container running
exec tail -f /dev/null
